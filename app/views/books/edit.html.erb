<h1><strong>Editing Book</strong></h1>

<div class = "error-box">
<% if @book.errors.any? %>
  <strong><%= @book.errors.count %> error prohibited this book from being saved:</strong>
  <ul class="error-text">
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
  </ul>
<% end %>
</div>

<%= form_with model: @book, url: book_path(@book.id), method: :PATCH do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <br></br>
  <%= f.submit "Update Book" %>
<% end %>
<%= link_to 'Show', book_path(@book.id) %>|<%= link_to "Back", books_path %>
